<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tickit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sisc_logo250"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sisc_logo250"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TaskProfile"></activity>
        <activity android:name=".AddTask" />
        <activity
            android:name=".AddMemberChoicePopUp"
            android:theme="@style/AppTheme.PopUpTheme" />
        <activity android:name=".EditionProfile" />
        <activity android:name=".ProjectProfile" />
        <activity
            android:name=".HistoryPopUp"
            android:theme="@style/AppTheme.PopUpTheme" />
        <activity android:name=".Profile" />
        <activity android:name=".FragmentsContainer" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditPopUp"
            android:theme="@style/AppTheme.PopUpTheme" />
    </application>

</manifest>